<section class="usa-section" id="resources_featured">
  <div class="grid-container grid-container-desktop">
    <div class="grid-row">

      <div class="grid-col-12">
        <%= content_for :page_title do %>Tag Info<% end %>
        <h1 class="page-header">Tag Info</h1>
        <div class = "panel panel-default">
          <div class = "panel-body">
            <p>
              <strong>Tag:</strong>
              <%= @official_tag.tag_text %>
            </p>
            <!-- <p>
              <strong>Type:</strong>
              <%= @official_tag.tag_type %>
            </p> -->
            <dl class="dl-horizontal">

              <dt>Social Media</dt>
              <dd><%= @official_tag.draft_outlet_count%> (<%= @official_tag.published_outlet_count%> published)</dd>
              <dt>Mobile Products</dt>
              <dd><%= @official_tag.draft_mobile_app_count%> (<%= @official_tag.published_mobile_app_count%> published)</dd>
              <dt>Galleries</dt>
              <dd><%= @official_tag.draft_gallery_count%> (<%= @official_tag.published_gallery_count%> published)</dd>

            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="usa-section">
  <div class="grid-container grid-container-desktop">
    <div class="grid-row">
      <div class="grid-col-12">
        <div class="buttonRow">
          <%= link_to 'Back to Tags', admin_official_tags_path, {:class => "fa fa-angel-double-left"} %>
          <%#= link_to 'History', history_admin_official_tag_path(@official_tag), {:class => "faf fa-history"} %>
          <%= link_to 'Edit', edit_admin_official_tag_path(@official_tag), {:class => "fa fa-pencil"} %>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="usa-section">
  <div class="grid-container grid-container-desktop">
    <div class="grid-row">
      <div class="grid-col-4">
        <h3>Social Media Accounts</h3>
        <div class="panel panel-default">
          <div class="panel-body">
            <ul class="list-group">
              <% @official_tag.outlets.each do |outlet| %>
                <li class="list-group-item">
                  <%= link_to outlet.organization, admin_outlet_path(outlet) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="grid-col-4">
        <h3>Mobile Apps</h3>
        <div class="panel panel-default">
          <div class="panel-body">
            <ul class="list-group">
              <% @official_tag.mobile_apps.each do |mobile_app| %>
                <li class="list-group-item">
                  <%= link_to mobile_app.name, admin_mobile_app_path(mobile_app) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="grid-col-4">
        <h3>Galleries</h3>
        <div class="panel panel-default">
          <div class="panel-body">
            <ul class="list-group">
              <% @official_tag.galleries.each do |gallery| %>
                <li class="list-group-item">
                  <%= link_to gallery.name, admin_gallery_path(gallery) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
