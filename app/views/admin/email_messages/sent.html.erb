<section class="usa-section" id="resources_featured">
  <div class="grid-container grid-container-desktop">
    <div class="grid-row">

      <div class="grid-col-12">
        <%= content_for :page_title do %>Sent!<% end %>
        <h1 class = "page-header"> Sent!</h1>
        <div class = "field">
          <p>To: <%= @email.to %></p>
        </div>  
        <div class = "field">
          <p>Subject: <%= @email.subject %></p>
        </div>
        <div class = "field">
         <p>Body:</p>
         <p><%= @email.body%></p>
        </div>
        <div class = "buttonRow">
          <%= link_to 'Dashboard', admin_path(), {:class => "fa fa-home"} %> 
        </div>
      </div>
    </div>
  </div>
</section>